<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico"
        android:layout_marginBottom="83dp"
        android:id="@+id/imageView2"
        android:layout_above="@+id/account_sign"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="至少4个字符"
        android:textSize="20dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/account_sign"
        android:layout_alignEnd="@+id/account_sign" />


    <EditText
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请在此处输入您注册的账号"
        android:textSize="20dp"
        android:maxLines="1"
        android:maxLength="12"
        android:id="@+id/account_sign"
        android:background="@null"
        android:layout_marginBottom="106dp"
        android:layout_above="@+id/password_sign"
        android:layout_alignLeft="@+id/password_sign"
        android:layout_alignStart="@+id/password_sign" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="至少6个字符"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/account_sign"
        android:layout_alignRight="@+id/password_sign"
        android:layout_alignEnd="@+id/password_sign" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/password_sign"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="12"
        android:textSize="20dp"
        android:hint="请在此处输入您注册的密码"
        android:textAlignment="center"
        android:layout_above="@+id/sign"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="注册"
        android:textSize="20dp"
        android:id="@+id/sign"
        android:onClick="sign"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/password_sign"
        android:layout_alignStart="@+id/password_sign"
        android:layout_marginBottom="87dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="返回"
        android:textSize="20dp"
        android:id="@+id/back"
        android:onClick="back"
        android:layout_alignBaseline="@+id/sign"
        android:layout_alignBottom="@+id/sign"
        android:layout_toRightOf="@+id/sign"
        android:layout_toEndOf="@+id/sign"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />


</RelativeLayout>